<div class="container" style="padding-top:120px;">
  <!-- search bar -->
  <form action="/" class="d-block">
    <div class="input-group">
      <input type="text" name="keywords" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
        aria-describedby="search-button" value={{keywords}}>
      <div class="input-group-append">
        <button class="btn btn-major" type="submit" id="search-button">
          <i class="fas fa-search"></i>
        </button>
      </div>
    </div>
    <select class="sort-select" name='sorts' onchange="this.form.submit()">
      <option value={{sorts}} disabled selected style="background-color: darkgray;">{{#if sorts}}{{sorts}}
        {{else}}排序{{/if}}
      </option>
      <option value="asc">A-Z</option>
      <option value="desc">Z-A</option>
      <option value="rating">評分</option>
      <option value="area">地區</option>
    </select>
  </form>
  <!--Create new Restaurant-->
  <div class="mt-3" style="position:fixed; right:0%">
    <button class="btn btn-major " type="button" id="create-button" onclick="javascript:location.href='/new'">
      <i class="fas fa-plus"></i>
    </button>
  </div>

  <!-- restaurant list -->
  <div class="container mt-5">
    <div class="row">
      <div class="col-md-10 col-12 mx-auto">
        <div class="row  card-columns ">
          {{#each restaurants}}
          <div class="col-4  md-4">
            <div class="cont card">
              <a class='restaurant-card' href="/restaurants/{{this._id}}" class="text-secondary">
                <img class="card-img-top" src={{this.image}} alt="{{this.name}}">
                <div class="item">
                  <ul class="sub">
                    <li><a href="/restaurants/{{this._id}}">Detail</a></li>
                    <li><a href="/restaurants/{{this._id}}/edit">Edit</a></li>
                    <li>
                      <form method='POST' action="/restaurants/{{this._id}}/delete?_method=DELETE">
                        <button type='submit'>Delete</button>
                      </form>
                    </li>
                  </ul>
                  <div class="main">‧‧‧</div>
                </div>
                <div class="card-body p-3">
                  <h6 class="card-title mb-1">{{this.name}}</h6>

                  <div class="restaurant-category mb-1">
                    <i class="fas fa-utensils "></i> {{this.category}}
                  </div>

                  <span class="badge badge-pill badge-danger font-weight-normal">
                    {{this.rating}}
                    <i class="fas fa-star fa-xs"></i>
                  </span>

                </div>
              </a>
            </div>
          </div>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
</div>