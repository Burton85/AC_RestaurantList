<style>
  form {
    margin-bottom: 30vh;
  }

  form p {
    width: 60vh;
    margin: auto;
  }

  .btn {
    margin: 1vh;
    float: right;
  }
</style>
<header>
  <!-- navigation -->
  <nav class="navbar navbar-light bg-light">
    <div class="container">
      <a class="navbar-brand" href="/">
        <img src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/6227/restaurant-list-logo.png"
          width="30" height="30" class="d-inline-block align-top" alt="好。吃">
        我的餐廳清單
      </a>
    </div>
  </nav>

  <div class="banner"></div>
</header>
<h1 class="mb-1 restaurant-show-title">建立餐廳資訊</h1>

<div class="container" style="margin-top:5vh">
  <div class="row">
    {{#if message}}
    <span class=" col-12 alert d-flex justify-content-center ">{{message}}</span>
    {{/if}}
    <div class="col-12 col-md-10 mx-auto">

      <form method='Post' action="/new">
        <p class="mb-1">
          <span class="text-secondary">
            名稱：
          </span>
          <input type="text" name="name" placeholder="name">
        </p>
        <p class="mb-1">
          <span class="text-secondary">
            英文：
          </span>
          <input type="text" name="name_en" placeholder="name_en">
        </p>
        <p class="mb-1">
          <span class="text-secondary">
            評分：
          </span>
          <input type="text" name="rating" placeholder="rating">
        </p>
        <p class="mb-1">
          <span class="text-secondary">
            類別：
          </span>
          <input type="text" name="category" placeholder="category">
        </p>

        <p class="mb-1">
          <span class="text-secondary">
            地址：
          </span>
          <input type="text" name="location" placeholder="location" style="width: 50vh;">
        </p>

        <p class="mb-1">
          <span class="text-secondary">
            電話：
          </span>
          <input type="text" name="phone" placeholder="phone" style="width: 50vh;">
        </p>

        <p class="mb-1">
          <span class="text-secondary">
            介紹：
            <input type="text" name="description" placeholder="description" style="width: 50vh;height:20vh">
          </span>
        </p>
        <p class="mb-3 ">
          <span class="text-secondary" id="app">
            照片：
            <input type=" text" name="image" placeholder="image url" style="width: 50vh;">
          </span>
        </p>
        <button class="btn btn-outline-secondary" type="submit">SAVE</button>
        <a class="btn btn-outline-secondary" href="/">BACK</a>
      </form>
    </div>
  </div>
</div>