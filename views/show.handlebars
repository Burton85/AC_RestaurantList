<div style="padding-bottom:120px">
  <header>
    <div class="banner" style='background: #dddddd center center
      url({{restaurant.image}})'></div>
  </header>
  {{#if permission}}
  <div class='options'>
    <a href="/restaurants/{{restaurant._id}}/edit">Edit</a>
    <form method='POST' action="/restaurants/{{restaurant._id}}/delete?_method=DELETE" style="display: inline;">
      <button type='submit'>Delete</button>
    </form>
  </div>
  {{/if}}
  <h1 class="mb-1 restaurant-show-title">{{restaurant.name}}</h1>
  <div class="container">
    <div class="row">
      <div class="col-12 col-md-10 mx-auto">

        <p class="mb-1">
          <span class="text-secondary">
            <i class="fas fa-utensils "></i>
            類別：
          </span>
          {{restaurant.category}}
        </p>

        <p class="mb-1">
          <span class="text-secondary">
            <i class="fas fa-map-marker-alt "></i>
            地址：
          </span>
          {{restaurant.location}}
          <a href={{restaurant.google_map}} class="text-secondary" target="_blank">
            <i class="fas fa-location-arrow  fa-xs"></i>
          </a>
        </p>

        <p class="mb-1">
          <span class="text-secondary">
            <i class="fas fa-mobile-alt "></i>
            電話：
          </span>
          {{restaurant.phone}}
        </p>

        <p class="mb-5">
          {{restaurant.description}}
        </p>

        <img class="rounded mx-auto d-block mb-4 w-100" src={{restaurant.image}} alt={{restaurant.name}}
          style="max-width: 600px;">
      </div>
    </div>
  </div>
</div>